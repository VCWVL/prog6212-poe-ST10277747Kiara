@{
    ViewData["Title"] = "Lecturer Portal";
}

<div class="container text-center mt-5">
    <h2 class="mb-4" style="color: #ff6600;">Lecturer Dashboard</h2>
    <p class="text-muted">Select an option below to manage your claims.</p>

    <div class="d-flex justify-content-center gap-4 mt-4">
        <a asp-controller="Claims" asp-action="Create" class="btn btn-primary btn-lg" style="background-color: #ff6600; border: none;">
            Submit Claim
        </a>

        <a asp-controller="Claims" asp-action="Index" class="btn btn-secondary btn-lg" style="background-color: #003366; border: none;">
            My Claims
        </a>
    </div>
</div>
