@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Login to Your Account</h4>
                </div>
                <div class="card-body">

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Login" method="post">
                        <!-- Profile Image -->
                        <div class="text-center mb-4">
                            <img id="profileImage" src="https://www.w3schools.com/howto/img_avatar.png"
                                 alt="Profile Image" class="rounded-circle border border-secondary"
                                 width="120" height="120">
                        </div>

                        <!-- Roles Dropdown -->
                        <div class="form-group mb-3">
                            <label for="role">Role</label>
                            <select class="form-control" name="role" required>
                                <option value="">-- Select Role --</option>
                                <option value="Lecturer">Lecturer</option>
                                <option value="ProgramCoordinator">Program Coordinator</option>
                                <option value="AcademicManager">Academic Manager</option>
                            </select>
                        </div>

                        <!-- Username -->
                        <div class="form-group mb-3">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" name="username" id="username" required />
                        </div>

                        <!-- Password -->
                        <div class="form-group mb-1">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" required />
                        </div>

                        <!-- Forgot password link -->
                        <div class="mb-3 text-end">
                            <a asp-action="ForgotPassword" asp-controller="Account" style="font-size: 0.9rem;">
                                Forgot your password?
                            </a>
                        </div>

                        <!-- Password note -->
                        <small class="form-text text-muted mb-3">
                            Password must be at least 8 characters long and include a number, uppercase letter, and special character.
                        </small>

                        <!-- Lecturer ID -->
                        <div class="form-group mb-3">
                            <label for="lecturerId">Lecturer ID</label>
                            <input type="number" class="form-control" name="lecturerId" required />
                        </div>

                        <!-- Login button -->
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const usernameInput = document.getElementById('username');
            const profileImage = document.getElementById('profileImage');

            usernameInput.addEventListener('input', function () {
                const username = usernameInput.value.trim();

                if (username !== '') {
                    // Change to a web-based avatar depending on username
                    // Using RoboHash to generate unique avatar images
                    const avatarUrl = `https://robohash.org/${encodeURIComponent(username)}.png?size=120x120`;
                    profileImage.src = avatarUrl;
                } else {
                    // Default image if username is empty
                    profileImage.src = 'https://www.w3schools.com/howto/img_avatar.png';
                }
            });
        });
    </script>
}
